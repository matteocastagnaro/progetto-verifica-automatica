<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/result_object_thumb"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@android:drawable/ic_menu_report_image"/>

    <TextView
        android:id="@+id/result_object_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/result_object_thumb"
        android:layout_toRightOf="@+id/result_object_thumb"
        android:paddingLeft="20dp"
        android:text="TITOLO"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result_object_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_object_title"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/result_object_thumb"
        android:layout_toRightOf="@+id/result_object_thumb"
        android:paddingLeft="20dp"
        android:text="Descrizione"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12dp"
        android:textStyle="italic" />

</RelativeLayout>